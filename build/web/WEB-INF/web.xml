<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SaveProfile</servlet-name>
        <servlet-class>controllers.SaveProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyOTP</servlet-name>
        <servlet-class>controllers.VerifyOTP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createOrder</servlet-name>
        <servlet-class>controllers.createOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cheforders</servlet-name>
        <servlet-class>controllers.cheforders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deliverorder</servlet-name>
        <servlet-class>controllers.deliverorder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cheflogin</servlet-name>
        <servlet-class>controllers.cheflogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveProfile</servlet-name>
        <url-pattern>/SaveProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyOTP</servlet-name>
        <url-pattern>/VerifyOTP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createOrder</servlet-name>
        <url-pattern>/createOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cheforders</servlet-name>
        <url-pattern>/cheforders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deliverorder</servlet-name>
        <url-pattern>/deliverorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cheflogin</servlet-name>
        <url-pattern>/cheflogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
